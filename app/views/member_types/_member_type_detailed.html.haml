%div{ :id => "member_type_#{member_type.id}", :class => 'member_detailed' }
  .detailed_header.group
    = image_tag 'application/member_types/member_type_big.png'
    .detailed_title_projected
      %p.detailed_title
        = member_type.name
        %br
        Price:
        = number_to_currency member_type.price
      %p.detailed_projected
        (projected members=#{ member_type.projected_members }, maximum=#{ member_type.maximum_members_string })
  %p.detailed_content
    = member_type.description
  %p.detailed_total
    Value =
    = number_to_currency member_type.price
    = link_to 'BUY', payment_path(:member_id => member_type.id), :class => 'blue_btn'
